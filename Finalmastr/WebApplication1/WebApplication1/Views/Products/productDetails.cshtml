            </div>
            <div class="recent-product-activation slick-layout-wrapper--15 axil-slick-arrow arrow-top-slide">
                @foreach (var cardsItem in Model.cards)
                {
                    <div class="slick-single-layout">
                        <div class="axil-product">
                            <div class="thumbnail">
                                <a asp-action="productDetails" asp-controller="Products" asp-route-id="@cardsItem.Id">
                                    <img src="~/assets/images/product/@cardsItem.ImageUrl" alt="Product Images">
                                </a>
                                <div class="label-block label-right">
                                    <div class="product-badget">20% OFF</div>
                                </div>
                                <div class="product-hover-action">
                                    <ul class="cart-action">
                                        <li class="wishlist"><a href="wishlist.html"><i class="far fa-heart"></i></a></li>
                                        <li class="select-option"><a href="cart.html">Add to Cart</a></li>
                                        <li class="quickview"><a asp-action="productDetails" asp-controller="Products" asp-route-id="@cardsItem.Id" data-bs-toggle="modal" data-bs-target="#quick-view-modal"><i class="far fa-eye"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="product-content">
                                <div class="inner">
                                    <h5 class="title"><a asp-action="productDetails" asp-controller="Products" asp-route-id="@cardsItem.Id">@cardsItem.CardName</a></h5>
                                    <div class="product-price-variant">
                                        <span class="price old-price">@cardsItem.Price</span>
                                        <span class="price current-price">@cardsItem.Price</span>
                                    </div>
                               
                                </div>
                            </div>
                        </div>
                    </div>
                }
             

